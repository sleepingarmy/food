<h1>Add a Delivery Address</h1>
<%= form_for @item, :url => basket_item_path, :html => { :multipart => true } do |f| %>
	<%= f.label(:street)%>
	<%= f.text_field(:street)%>
	<br>
	<%= f.label(:apt_num)%>
	<%= f.text_field :apt_num%>
	<br>
	<%= f.label(:city)%>
	<%= f.text_field(:city)%>
	<br>
	<%= f.label(:state)%>
	<%= f.text_field(:state)%>
	<br>
	<%= f.label(:zip)%>
	<%= f.text_field(:zip)%>
	<br>
	<%= f.submit("Add Address")%>
<%end%>