<h1 class="page-header">create new basket</h1>

<%= form_for @basket do |f| %>
  
  <div class="form-group">  
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">  
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>
  
  <div class="form-group"></div>
    <%= f.label :time_frame %>
    <%= f.number_field :time_frame %>
  </div>
  
  <div class="form-group">
    <%= f.label :instructions %>
    <%= f.text_field :instructions %>
  </div>

  <%= f.submit "save" %>
<% end %>



